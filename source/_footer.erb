<footer>
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-sm-6 col-xs-12">
        <h6>เกี่ยวกับเรา</h6>
        <%= link_to 'นโยบายความเป็นส่วนตัว', '/privacy_policy' %>
      </div> <!-- .col-md-4 col-sm-6 col-xs-12 -->
      <div class="col-md-4 col-sm-6 col-xs-12">
        <h6>ติดตามข่าวสาร</h6>
        <div class="fb-page" data-href="https://www.facebook.com/pandetacademy/" data-tabs="timeline"
          data-height="350" data-small-header="false"
          data-adapt-container-width="true" data-hide-cover="false"
          data-show-facepile="true">
          <blockquote cite="https://www.facebook.com/pandetacademy/" class="fb-xfbml-parse-ignore">
            <a href="https://www.facebook.com/pandetacademy/">สอนDigital Painting/Concept Art/Drawing/Illustration</a>
          </blockquote>
        </div>
      </div> <!-- .col-md-4 col-sm-6 col-xs-12 -->
      <div class="col-md-4 col-sm-6 col-xs-12">
        <h6>ฝากข้อความ</h6>
        <% form_tag 'http://localhost:8888/email_form_with_php.php',
          :class => 'mail-form ajax-form', :method => 'post' do %>
          <div class="form-group">
            <%= label_tag "ชื่อ*", :class => 'name' %><br>
            <%= text_field_tag :name, required: true,
                  class: 'form-control input-sm' %>
          </div> <!-- .form-group -->

          <div class="form-group">
            <%= label_tag "อีเมล์*", :class => 'email' %><br>
            <%= email_field_tag :email, required: true,
                  class: 'form-control input-sm' %>
          </div> <!-- .form-group -->

          <div class="form-group">
            <%= label_tag "หัวข้อ*", :class => 'title' %><br>
            <%= text_field_tag :title, required: true,
                  class: 'form-control input-sm' %>
          </div> <!-- .form-group -->

          <div class="form-group">
            <%= label_tag "ข้อความ*", :class => 'body' %><br>
            <%= text_area_tag :body, required: true,
                  class: 'form-control input-sm' %>
          </div> <!-- .form-group -->
          <%= hidden_field_tag "reply_to", value: "email" %>
          <%= hidden_field_tag "email_subject", value: "Message from customer" %>
          <%= submit_tag "ส่งข้อความ", class: 'btn btn-primary' %>

        <% end %>
      </div> <!-- .col-md-4 col-sm-6 col-xs-12 -->
    </div> <!-- .row -->
  </div> <!-- .container -->
</footer>
