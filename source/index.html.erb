<%= partial "why_we_need_to_study" %>

<div class="container" id="question-answer">

  <div class="row">
    <div class="col-md-6 col-xs-12">
      <%= image_tag "helloquence-61189-unsplash.jpg", width: '100%' %>
    </div> <!-- .col-md-6 col-xs-12 -->

    <div class="col-md-6 col-xs-12">
      <h2><%= data.faq.title %></h2>
      <% data.faq.answers.each do |answer| %>
        <div class="answer pb-2 pl-3">
          <i class="fa fa-angle-right faa-horizontal animated-hover"></i>
          <%= answer %>
        </div> <!-- .answer -->
      <% end %>
    </div> <!-- .col-md-6 col-xs-12 -->
  </div> <!-- .row -->
</div> <!-- .container -->
