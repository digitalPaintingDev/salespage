      <div class="col-sm-3">
        <%= link_to "สอบถามข้อมูล", "http://line.me/ti/p/~digitalpainting", class: "btn btn-primary" %>
      </div> <!-- .col-sm-3 -->
    </div> <!-- .row -->
  </div> <!-- .image -->
</div>
<%= partial "fb_chat" %>

<%= partial "courses" %>

<div id="step-to-apply" class="py-1 my-4">
  <div class="container">
    <h2 class="text-center"><%= data.apply.title %></h2>
    <div class="row">
      <div class="col-md-4 col-xs-12">
        <div class="steps fa-4x">
          <i class="fa fa-comments step-icon"></i>
        </div> <!-- .steps -->
        <h5 class="title"><%= data.apply.step1.title %></h5> <!-- .title -->
        <p class="subtitle"><%= data.apply.step1.subtitle %></p> <!-- .subtitle -->
      </div> <!-- .col-md-4 col-xs-12 -->
      <div class="col-md-4 col-xs-12">
        <div class="steps fa-4x">
          <i class="far fa-credit-card step-icon"></i>
        </div> <!-- .steps -->
        <h5 class="title"><%= data.apply.step2.title %></h5> <!-- .title -->
        <p class="subtitle"><%= data.apply.step2.subtitle %></p> <!-- .subtitle -->
      </div> <!-- .col-md-4 col-xs-12 -->
      <div class="col-md-4 col-xs-12">
        <div class="steps fa-4x">
          <span class="fa-layers fa-fw">
            <i class="fas fa-file-alt step-icon"></i>
            <i class="far fa-paper-plane" data-fa-transform="shrink-12 up-3 right-3"></i>
          </span>
        </div> <!-- .steps -->
        <h5 class="title"><%= data.apply.step3.title %></h5> <!-- .title -->
        <p class="subtitle"><%= data.apply.step3.subtitle %></p> <!-- .subtitle -->
      </div> <!-- .col-md-4 col-xs-12 -->
    </div> <!-- .row -->
  </div> <!-- .container -->
</div>
